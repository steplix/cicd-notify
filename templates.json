[
    {
        "name": "pr",
        "template": {
            "blocks": [
                {
                    "type": "header",
                    "text": {
                        "type": "plain_text",
                        "text": "<repository>"
                    }
                },
                {
                    "type": "section",
                    "text": {
                        "type": "mrkdwn",
                        "text": "Tag $ is ready to deploy!"
                    },
                    "accessory": {
                        "type": "button",
                        "text": {
                            "type": "plain_text",
                            "text": "Create Release"
                        },
                        "url": "$/releases/new",
                        "style": "primary"
                    }
                },
                {
                    "type": "context",
                    "elements": [
                        {
                            "type": "mrkdwn",
                            "text": "${{ github.server_url }}/${{ github.repository }}"
                        }
                    ]
                }
            ]
        }
    },
    {
        "name": "release",
        "template": {
            "blocks": [
                {
                    "type": "header",
                    "text": {
                        "type": "plain_text",
                        "text": "${{ github.repository }}"
                    }
                },
                {
                    "type": "section",
                    "text": {
                        "type": "mrkdwn",
                        "text": "Tag <${{ github.server_url }}/${{ github.repository }}/tree/${{ steps.bumped_tag.outputs.version }}|${{ steps.bumped_tag.outputs.version }}> is ready to deploy!"
                    },
                    "accessory": {
                        "type": "button",
                        "text": {
                            "type": "plain_text",
                            "text": "Create Release"
                        },
                        "url": "${{ github.server_url }}/${{ github.repository }}/releases/new",
                        "style": "primary"
                    }
                },
                {
                    "type": "context",
                    "elements": [
                        {
                            "type": "mrkdwn",
                            "text": "${{ github.server_url }}/${{ github.repository }}"
                        }
                    ]
                }
            ]
        }
    }
]